{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016", 
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    
    /* specific fix for your error */
    "verbatimModuleSyntax": false                        
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}